<!DOCTYPE html>
<html lang="en">
<%- include('./components/head.ejs') %>
<body> 
    <div class="loading">
        <div id="spinner"></div>
    </div>
    <div class="box">
        <%- include('./components/header.ejs') %>
        <main>
            <div class="tools">
                <button id="addCard" class="toolsButton" onclick="addCard()"><i class="fa fa-plus" aria-hidden="true"></i></button>
                <button id="removeCard" class="toolsButton" onclick="removeLastCard()"><i class="fa fa-minus" aria-hidden="true"></i></button>
                <button id="removeAllCards" class="toolsButton" onclick="removeAllCards()"><i class="fa fa-eraser" aria-hidden="true"></i></button>
                <button id="shuffleCards" class="toolsButton" onclick="shuffleCards()"><i class="fa fa-random" aria-hidden="true"></i></button>
                <button id="returnState" class="toolsButton" onclick="returnState()"><i class="fa fa-undo" aria-hidden="true"></i></button>
                <div class="backgroundImageInput">
                    <input id="addImgBackground" type="file" accept="image/png, image/jpeg" name="file" style="display:none" onchange="updateBackground(this)"> 
                    <button class="toolsButton" onclick="this.parentElement.querySelector('#addImgBackground').click();"><i class="fa fa-file-image-o" aria-hidden="true"></i></button>
                    <input type="range" min="0" max="100" oninput="changeBackgroundSize(this)">
                </div>
                <div class="selectFilters">
                    <button id="filterButton" class="toolsButton" onclick="showFilters(this.parentElement)"><i class="fa fa-filter" aria-hidden="true"></i></button>
                    <div class="filters"></div>
                </div>
                <div class="search-container">
                    <button class="toolsButton" onclick="searchAllCard(this.nextElementSibling)"><i class="fa fa-search" aria-hidden="true"></i></button>
                    <input class="searchCard" type="search" placeholder="Введите название" spellcheck="false" onchange="searchAllCard(this)">
                </div>
            </div>
            <div class="cards">
                <div class="backgroundContainer"></div>
            </div>
            <button class="toolsButton tutorial-btn" onclick="openTutorialModal(); this.style.display = 'none'">?</button>
            <button class="toolsButton" id="scrollToTop" onclick="scrollWindowToTop()">Начало</button>
        </main>
    </div>
    <div class="modals-container"></div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/../view/html2canvas.esm.js"></script>
    <script src="/../controller/controller.js"></script>
    <script src="/../view/autorization.js"></script>
    <script src="/../view/page.js"></script>
    <script src="/../view/card.js"></script>
    <script src="/../view/session_states.js"></script>
    <script src="/../view/create_content_photo.js"></script>
    <script src="/../view/registration.js"></script>
    <script src="/../view/drugAndDrop.js"></script>
    <script src="/../view/colorConverter.js"></script>
    <script src="/../view/ui_elements.js"></script>
    <script src="/../view/changeTheme.js"></script>
</body>
</html>